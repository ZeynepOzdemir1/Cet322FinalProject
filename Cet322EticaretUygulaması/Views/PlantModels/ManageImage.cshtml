@model Cet322EticaretUygulaması.Models.PlantModel

@{
    ViewData["Title"] = "ManageImage";
}

<h1>ManageImage</h1>

<div>
    <h4>PlantModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlantName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlantName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
    </dl>
    <ul>
       @foreach (var image in Model.PlantImages)
       {
           <li>@image.FileName
            <img src="~~UserImages/@image.FileName"/>
        </li>
       }
    </ul>
    <form asp-action="UplodeImage" enctype="multipart/form-data">
        <input type="hidden" name="PlantId" value="@Model.Id" />

        <input type="file" name="Imagefile" id="Imagefile" class="custom-file-input" />
        <input type="submit" value="Yükle" />
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
